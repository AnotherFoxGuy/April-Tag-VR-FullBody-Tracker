# @PACKAGE_INIT@
set(openvr_VERSION 1.16.8)

set_and_check(openvr_INCLUDE_DIR "@PACKAGE_OVR_INSTALL_INCLUDE_DIR@")

set_and_check(openvr_HEADERS "${openvr_INCLUDE_DIR}/openvr.h"
    "${openvr_INCLUDE_DIR}/openvr_driver.h")

set_and_check(openvr_IMPLIB "@PACKAGE_OVR_INSTALL_LINK_FILE@")
set_and_check(openvr_LIB "@PACKAGE_OVR_INSTALL_SHARED_FILE@")

set(openvr_FOUND TRUE)

if(TARGET openvr::openvr)
    return()
endif()

add_library(openvr::openvr SHARED IMPORTED)
set_target_properties(openvr::openvr PROPERTIES
    IMPORTED_LOCATION "${openvr_LIB}"
    IMPORTED_IMPLIB "${openvr_IMPLIB}")
target_include_directories(openvr::openvr INTERFACE ${openvr_INCLUDE_DIR})
target_sources(openvr::openvr INTERFACE ${openvr_HEADERS})

